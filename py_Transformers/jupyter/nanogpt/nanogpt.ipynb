   "source": [
    "# Mathematical trick\n",
    "# 8 tokens should \"talk to eachother\"\n",
    "# 8 tokens at an index should only talk to tokens before it (previous context to current timestep)\n",
    "torch.manual_seed(1337)\n",
    "B, T, C  = 4, 8, 2\n",
    "x = torch.randn(B,T,C)\n",
